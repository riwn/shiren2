<% set_meta_tags title: "#{@dungeon.name}解説",description:"シレン2 タイムアタック番付サイトの#{@dungeon.name}解説ページです！" %>

<div class="container">
    <div class="row">
        <div class="col-12 mt-3">
            <div class="card">
                <div class="card-header <%= @dungeon.dungeoncolor %> text-center">
                    <h3 class="card-title float-left text-white">
                        <%= @dungeon.name %>解説
                    </h3>
                </div>
                <div class="card-body bg-light">
                    <% if @explains.count == 0 then %>
                    <div class="card-text">
                        <h3>Coming Soon...</h3>
                    </div>
                    <% else %>
                    <div class="card-text">
                        <% @explains.each do |explain| %>
                        <h5>セクション<%= explain.section %></h5>
                        <%= link_to explain.title, "/explain/#{@dungeon.uriname}/#{explain.id}" %>
                        <% end %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>