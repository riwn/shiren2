<% set_meta_tags title: "アカウント作成",description:"シレン2 タイムアタック番付サイトのアカウント作成ページです" %>

<% content_for :mosttop do %>
  <%= devise_error_messages %>
<% end %>

<div class="container">
  <div class="row">
    <div class="offset-lg-3"></div>
    <div class="col-sm-12 col-lg-6">
      <div class="card bg-light mt-5 text-center">
        <h2 class="card-title float-left pt-3 pl-3">アカウント作成</h2>
        <div class="card-body">
          <div class="card-text">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <div class="field">
              <%= f.label :name %>
              <em>　　(10 文字以内)</em><br />
              <%= f.text_field :name, autofocus: true, maxlength: 15,size: 30 %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" ,size: 30 %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",size: 30  %>
            </div>

            <div class="actions">
              <%= f.submit "作成",{:class =>"btn btn-primary btn-lg mt-3 mb-3"} %>
            </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  //ナタネ村を非表示する
  document.getElementById("nataneVillage").style.display = "none";
</script>