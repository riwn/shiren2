<div class="container">
  <h2>アカウント作成</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %>
    <em>　　(10 文字以内)</em><br />
    <%= f.text_field :name, autofocus: true, maxlength: 15,size: 30 %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,size: 30 %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",size: 30  %>
  </div>

  <div class="actions">
    <%= f.submit "作成" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<script>
  //ナタネ村を非表示する
  document.getElementById("nataneVillage").style.display = "none";
</script>