<% content_for :title do %>
記録申請
<% end %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card bg-light">
                <h2 class="card-title float-left pt-3 pl-3">記録申請</h2>
                <div class="card-body">
                    <div class="card-text">
                        <% @rank.errors.full_messages.each do |message| %>

                        <p class="text-danger"><%= message %></p>

                        <% end %>
                        <%= form_with(model: @rank,local: true,url:{action:'recordconfirm'}) do |r|%>
                        <div class="record-table">
                            <table class="table table-bordered">
                                <tr class="table-success">
                                    <td><%= r.label :name, "名前" %><p class="needContent">※必須</p></td>
                                    <td><%= r.text_field(:name,{:maxlength => 15,class:"recordform-part"}) %></td>
                                </tr>
                                <tr class="table-success">
                                    <td><%= r.label :dungeon, "ダンジョン" %><p class="needContent">※必須</p></td>
                                    <td>
                                        <%= r.select :dungeon, [["最果てへの道99FTA", "最果てへの道99FTA"], ["カラクロTA", "カラクロTA"], ["ストーリーTA", "ストーリーTA"], ["鬼ヶ島ありありTA", "鬼ヶ島ありありTA"], ["女王グモ捕獲TA", "女王グモ捕獲TA"]],class:"recordform-part"  %>
                                    </td>
                                </tr>
                                <tr class="table-success">
                                    <td><%= r.label :result, "記録" %><p class="needContent">※必須</p></td>
                                    <td>
                                    <div class="recordform-part">
                                        <%= select_tag "hour",options_for_select((0..10),class:'option',selected: params["hour"].nil? ? 10 : params["hour"]) %>
                                        時間
                                        <%= select_tag "minute",options_for_select((0..59),class:'option',selected: params["minute"].nil? ? 59 : params["minute"]) %>
                                        分
                                        <%= select_tag "second",options_for_select((0..59),class:'option',selected: params["second"].nil? ? 59 : params["second"]) %>
                                        秒
                                    </td>
                                </tr>
                                <tr class="table-primary">
                                    <td><%= r.label :movie, "動画URL" %><p class="selectContent">※どちらか一つ</p></td>
                                    <td><%= r.text_field(:movie,class:"recordform-part") %></td>
                                </tr>
                                <tr class="table-primary">
                                    <td><%= r.label :recordimage, "画像" %><p class="selectContent">※どちらか一つ</p></td>
                                    <td><%= r.file_field :recordimage,class:"recordform-part" %></td>
                                </tr>
                            </table>
                        </div>
                        <div class="float-right pt-1 pr-5">
                            <%= r.submit("申請",{:class =>"btn btn-primary btn-lg pt-3"}) %>
                        </div>

                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    //ナタネ村を非表示する
    document.getElementById("nataneVillage").style.display = "none";
</script>